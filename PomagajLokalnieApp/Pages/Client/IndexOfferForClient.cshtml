@page
@model IndexOfferForClient

<p class="text-info">Ammount: @Model.Ammount</p>
<h1>Your Vouchers</h1>
<table class="table table-striped float-right">
    <thead>
    <th>VoucherId</th>
    <th>Current Ammount</th>
    <th>Start Ammount</th>
    <th>Expioration Date</th>
    </thead>
    <tbody>
    @foreach (var item in Model.VoucherAmmount)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CurrentAmount</td>
            <td>@item.StartAmount</td>
            <td>@item.ExpirationDate</td>
        </tr>
    }
    </tbody>
</table>
<h1>Offers for you</h1>
<table class="table table-striped table-bordered">
    <thead>
    <th>Name</th>
    <th>Description</th>
    <th>OfferType Name</th>
    <th>Price</th>
    <th>SoftDelete</th>
    </thead>
    
    <tbody>
    @foreach (var item in Model.OfferCollection)
    {
        
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.OfferTypeName</td>
            <td>@item.Price</td>
            <td>@item.SoftDelete</td>
            
            <form asp-page-handler="buy" asp-route-id="@item.Id" asp-route-name="@HttpContext.User.Identity.Name">
                <td>
                    <button class="btn btn-danger">Buy</button>
                </td>
            </form>
        </tr>
    }
    </tbody>
</table>
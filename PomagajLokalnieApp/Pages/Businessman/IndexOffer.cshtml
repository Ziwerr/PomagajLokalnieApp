@page
@model IndexOffer

<a class="btn btn-secondary" asp-page="CreateOffer">Dodaj ofertę</a>
<table class="table table-striped table-bordered">
    <thead>
    <th>Name</th>
    <th>Description</th>
    <th>OfferType Name</th>
    <th>Price</th>
    <th>SoftDelete</th>
    </thead>
    
    <tbody>
    @foreach (var item in Model.OfferCollection)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.OfferTypeName</td>
            <td>@item.Price</td>
            <td>@item.SoftDelete</td>
            
            <form asp-page-handler="delete" asp-route-id="@item.Id">
                <td>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </form>
        </tr>
    }
    </tbody>
</table>

